<Window x:Class="LibrosGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="605">
    <Grid HorizontalAlignment="Left" Width="605" Margin="0,0,-8,0">
        <DataGrid x:Name="gridCosas" HorizontalAlignment="Left" Margin="89,95,0,0" VerticalAlignment="Top" SelectionChanged="DataGrid_SelectionChanged_1"/>
        <ComboBox x:Name="cmbCat" HorizontalAlignment="Left" Margin="332,44,0,0" VerticalAlignment="Top" Width="228" SelectionChanged="cmbCat_SelectionChanged"/>
        <Menu Margin="0,0,10,293">
            <MenuItem Header="_Catalogo">
                <MenuItem Header="A/E _Autor..."  Click="AE_Autor"/>
                <MenuItem Header="A/E _Editorial..."  Click="AE_Editorial"/>
                <MenuItem Header="A/E _Genero..."  Click="AE_Genero"/>
            </MenuItem>
            <MenuItem Header="_Libro">
                <MenuItem Header="_Nuevo..."  Click="Nuevo_Libro"/>
            </MenuItem>
        </Menu>
        <Button x:Name="btn_DetalleLibro" Content="Ver Detalle" HorizontalAlignment="Left" Margin="474,288,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
