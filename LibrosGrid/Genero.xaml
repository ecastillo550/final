<Window x:Class="LibrosGrid.Genero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Genero" Height="300" Width="488">
    <Grid>
        <ComboBox x:Name="cmb_libros" HorizontalAlignment="Left" Margin="110,61,0,0" VerticalAlignment="Top" Width="301" SelectionChanged="ComboBox_SelectionChanged_1"  ItemsSource="{Binding}"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="51,135,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_nombre" HorizontalAlignment="Left" Height="23" Margin="112,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336"/>
        <Button x:Name="btn_Guardar" Content="Guardar" HorizontalAlignment="Left" Margin="188,194,0,0" VerticalAlignment="Top" Width="108" Click="btn_Guardar_Click"/>

    </Grid>
</Window>
