        <ComboBox x:Name="cmb_libros" HorizontalAlignment="Left" Margin="110,61,0,0" VerticalAlignment="Top" Width="301" SelectionChanged="ComboBox_SelectionChanged_1"  ItemsSource="{Binding}"/>
