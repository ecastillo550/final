        <TextBox x:Name="txt_apaterno" HorizontalAlignment="Left" Height="23" Margin="112,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336"/>
        <Label Content="Nacionalidad:" HorizontalAlignment="Left" Margin="26,226,0,0" VerticalAlignment="Top" Width="103"/>
        <TextBox x:Name="txt_nacionalidad" HorizontalAlignment="Left" Height="23" Margin="112,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336"/>

    </Grid>
</Window>
